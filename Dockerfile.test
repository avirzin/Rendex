# Simple test Dockerfile for Alchemy SDK
FROM node:18-alpine

# Install build dependencies
RUN apk add --no-cache python3 make g++

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy test script
COPY docker-test-alchemy.js ./

# Run the test
CMD ["node", "docker-test-alchemy.js"] 